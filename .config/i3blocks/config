[poweroff]
full_text=‚èª
command=swaynag -t warning -m 'Turn it off?' -B 'All suns must set.' 'exec poweroff'

[restart]
full_text=‚Üª
command=swaynag -t warning -m 'Is it time to restart?' -B 'Open a breach.' 'exec reboot'

[suspend]
full_text=‚òæ
command=systemctl suspend

[logout]
full_text=‚¨é
command=swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

[scratchpad]
command=echo -n "‚ñ©"; echo $(swaymsg -t get_tree | jq '.nodes[0].nodes[0] | select(.name=="__i3_scratch") | .floating_nodes | length')
interval=3

[bluetooth]
full_text=·õíluetooth
command=if [ $BLOCK_BUTTON ]; then blueman-manager; fi; ~/.config/i3blocks/bluetooth.sh
interval=3

[wifi]
full_text=wifi
command=if [ $BLOCK_BUTTON -eq 3 ]; then nm-connection-editor; elif [ $BLOCK_BUTTON ]; then alacritty -e nmtui; fi; ~/.config/i3blocks/wifi.sh;
interval=15

[battery_level]
full_text=battery_level
command=bash -c "if [ $(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | awk 'NR==12 { print $2 }') == "discharging" ]; then echo -n "üîã"; else echo -n "‚ö°"; fi; echo $(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | awk 'NR==22 { print $2 }')"
interval=5

[system76_power]
full_text=power_profile
command=if [ $BLOCK_BUTTON ]; then bash -c "~/.config/i3blocks/power_profile.sh"; fi; echo "P:" $(system76-power profile | awk 'NR==1 { print $3 }')
interval=5

[volume]
full_text=sound
command=bash -c "if [ $BLOCK_BUTTON ]; then alacritty -e alsamixer; fi; if [ $(amixer get Master | awk '/\[on|off\]/{ print $6 }' | head -1) == "[on]" ]; then echo -n  "üîä"; else echo -n "üîá"; fi; echo $(amixer get Master | awk -F 'Left:|[][]' 'BEGIN {RS=""}{ print $3 }');"
interval=1

[brightness]
full_text=text2
command=echo "üîÜ:$(light)"
interval=1

[calender]
full_text=text
command=date +%T
interval=1
